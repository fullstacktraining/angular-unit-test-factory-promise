{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-trailing-spaces": [2, { "skipBlankLines": true }]
    },
    "globals": {
      "angular" : true,
      "$" : true,
      "_" : true
    }
}